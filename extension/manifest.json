{
  "manifest_version": 3,
  "name": "Pomobud",
  "description": "Pomobud is a normal, simple yet minimal pomodoro timer (or) Tomato timer so you can focus and break that procrastination.",
  "icons": {
    "128": "/favicon-128.png",
    "192": "/favicon.png"
  },
  "version": "1.0",
  "action": {
    "default_popup": "extension.html"
  },
  "permissions": ["unlimitedStorage"],
  "background": {
    "service_worker": "/serviceWorker/sw.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["extension.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
